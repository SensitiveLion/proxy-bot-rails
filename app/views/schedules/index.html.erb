<div class="title">
  <div class="panel">
    <h1>The Proxy Bot</h1>
    <h2>Schedule a bot to keep your hosts files up to date</h2>
  </div>
</div>
<ul class="large-block-grid-2">
  <li>
    <div class="panel">
      <%= link_to "View Hosts-files", scrapers_path %>
    </div>
  </li>
  <li>
    <div class="panel">
      <%= link_to "Create", new_scraper_path %>
    </div>
  </li>
  <li>
    <div class="panel">
      <h2>Schedule a job</h2>
      <div class="row">
        <div class="small-8 large-centered columns">
          <%= form_for @schedule_new do |f| %>
            <div class="field">
              <%= f.label :interval, "How often" %>
              <%= f.select :interval, options_for_select(
                [["Every six hours", "6.hours"],
                ["Every twelve hours", "12.hours"],
                ["Every day", "1.day"],
                ["Every other day", "2.days"],
                ["Every three days", "3.days"],
                ["Every four day", "4.days"],
                ["Every five day", "5.days"],
                ["Every week", ":week"],
                ["Every weekend", ":weekend"],
                ["Every weekday", ":weekday"]]
                ) %>
            </div>
            <div class="field">
              <%= f.label :time, "When" %>
              <%= f.time_field( :time ) %>
            </div>
            <div class="actions">
              <%= f.submit "Schedule" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </li>
  <li>
    <div class="panel">
      <h2>Current schedule</h2>
      <h3>Hosts-files will be pulled every</h3>
      <h2>
        <% if @schedule == nil %>
          No schedule
        <% else %>
          <%= @schedule.interval_name %>
        <% end %>
      </h2>
      <h3>at</h3>
      <h2>
        <% if @schedule == nil %>
          No schedule
        <% else %>
          <%= @schedule.time_name %>
        <% end %>
      </h2>
      <p></p>
    </div>
  </li>
</ul>

